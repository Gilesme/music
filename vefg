import javafx.application.Application;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.layout.VBox;
import javafx.scene.media.Media;
import javafx.scene.media.MediaPlayer;
import javafx.stage.Stage;

public class MusicPlayer extends Application {
    public static void main(String[] args) {
        launch(args);
    }

    @Override
    public void start(Stage primaryStage) {
        primaryStage.setTitle("Проигрыватель музыки");

        // Создание медиа-файла (замените "sample.mp3" на путь к вашему аудиофайлу)
        String mediaFile = "sample.mp3";
        Media media = new Media("file:///" + mediaFile);
        MediaPlayer mediaPlayer = new MediaPlayer(media);

        // Создание кнопок для управления воспроизведением
        Button playButton = new Button("Воспроизвести");
        playButton.setOnAction(e -> mediaPlayer.play());   // Создание кнопок для управления воспроизведением
        Button playButton = new Button("Воспроизвести");
        playButton.setOnAction(e -> mediaPlayer.play());   // Создание кнопок для управления воспроизведением
        Button playButton = new Button("Воспроизвести");
        playButton.setOnAction(e -> mediaPlayer.play());

        Button pauseButton = new Button("Пауза");
        pauseButton.setOnAction(e -> mediaPlayer.pause());

        Button stopButton = new Button("Стоп");
        stopButton.setOnAction(e -> mediaPlayer.stop());

        // Создание макета
        VBox vbox = new VBox(playButton, pauseButton, stopButton);
        Scene scene = new Scene(vbox, 300, 200);

        primaryStage.setScene(scene);
        primaryStage.show();
    }
}
